<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/control_image_view"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:clickable="true"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:adjustViewBounds="true"
            android:paddingBottom="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_sunflower"
            />
        <!-- android:src="@drawable/ic_menu_flower" -->

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundTint="@color/colorFabValve"
            android:src="@drawable/ic_fab_valve"
            android:id="@+id/fabValve"
            android:clickable="true"
            app:borderWidth="0dp"
            app:elevation="15dp"
            />

        <android.support.design.widget.FloatingActionButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundTint="@color/colorFabSettings"
            android:src="@drawable/ic_fab_settings"
            android:id="@+id/fabSettings"
            android:clickable="true"
            android:layout_gravity="right"
            app:elevation="15dp"
            />

        <android.support.design.widget.FloatingActionButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundTint="@color/colorFabPump"
            android:src="@drawable/ic_fab_pump"
            android:id="@+id/fabPump"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            app:elevation="15dp" />

    </LinearLayout>


</LinearLayout>
